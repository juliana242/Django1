# en finegap/urls.py
from django.urls import path
from . import views

urlpatterns = [
    # Otras URL de la aplicaci√≥n...
    path('destino/<int:destino_id>/', views.detalle_destino, name='detalle_destino'),
]

  #views.py

# en finegap/views.py
from django.shortcuts import render
from .models import Destino

def detalle_destino(request, destino_id):
    destino = Destino.objects.get(pk=destino_id)
    return render(request, 'turismo/detalle_destino.html', {'destino': destino})

#turismo.html

<!-- en turismo/templates/turismo/detalle_destino.html -->
<!DOCTYPE html>
<html>
<head>
    <title>{{ destino.nombre }}</title>
</head>
<body>
    <h1>{{ destino.nombre }}</h1>
    <p>{{ destino.descripcion }}</p>
    <img src="{{ destino.imagen.url }}" alt="{{ destino.nombre }}">
</body>
</html>
